    <rules>
        <fullName>New Bug Was Submitted</fullName>
        <actions>
            <name>A_New_Bug_has_been_submitted</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Bug__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
