    <fieldUpdates>
        <fullName>Update_Support_Request_Subject</fullName>
        <description>This will update the Support Request subject for only Account Request record types</description>
        <field>Subject__c</field>
        <formula>IF(ISPICKVAL(User_Account_Request_For__c , &#39;PRODUCTION&#39;), &#39;Production Account Request&#39;, &#39;Sandbox Account Request&#39;)</formula>
        <name>Update Support Request Subject</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Remove Duplicate Support Request Status</fullName>
        <actions>
            <name>Update_SR_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Support_Request__c.Mark_as_Duplicate__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
