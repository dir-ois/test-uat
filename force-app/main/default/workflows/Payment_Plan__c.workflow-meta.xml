    <rules>
        <fullName>Payment Plan%3A 10 Days After Agreement Due</fullName>
        <actions>
            <name>check</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Sends an email to the Case Management Owner 10 days after the Payment Plan Agreement Date and there is a Balance Due</description>
        <formula>(   Payment_Plan_Total_Amount_Due__c -  Payment_Plan_Down__c -  Total_Payment_Amount__c &gt; 0   ||   ( Payment_Plan_Total_Amount_Due__c &gt; 0 &amp;&amp; ( ISBLANK ( Payment_Plan_Down__c ) || ISBLANK ( Total_Payment_Amount__c ) )   ) ) &amp;&amp;   Payment_Plan_Agreement_Date__c  &gt; Today()</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Payment_Plan_10_Days_Past_Agreement_Date</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Payment_Plan__c.Payment_Plan_Agreement_Date__c</offsetFromField>
            <timeLength>10</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Payment Plan%3A Due Date Passed</fullName>
        <actions>
            <name>Set_Deputy_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Notify Assigned Deputy 10 days after payment due date.</description>
        <formula>NOT( ISBLANK(Due_Date__c) ) &amp;&amp; (  BEGINS( Case__r.RecordType.DeveloperName , &quot;BOFE&quot; ) &amp;&amp; ( Payment_Plan_Total_Amount_Due__c - Total_Payment_Amount__c -  Payment_Plan_Down__c &gt; 0 ) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Payment_Past_Due</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Set_status_to_not_current</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Payment_Plan__c.Due_Date__c</offsetFromField>
            <timeLength>10</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
