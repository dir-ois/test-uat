<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Inactive_Reason_Status_Inactive</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 TEXT(Status__c) = &#39;Inactive&#39;,
 LEN( Inactive_Reason__c ) = 0
)</errorConditionFormula>
    <errorMessage>If Status = Inactive, you must enter the reason into the Inactive Reason field.</errorMessage>
</ValidationRule>
