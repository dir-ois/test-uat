<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Approve_the_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Status__c), ISPICKVAL(Status__c, &quot;Approved&quot;), !$Permission.Check_Approver)</errorConditionFormula>
    <errorMessage>Only check batch approver can approve the checks</errorMessage>
</ValidationRule>
